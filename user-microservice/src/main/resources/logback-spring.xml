<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <!-- ===== PROPERTIES ===== -->
    <property name="LOG_DIR" value="logs"/>
    <property name="MS_FLOW_DIR" value="${LOG_DIR}/ms-flow"/>

    <!-- ===== NORMAL APP LOG ===== -->
    <appender name="APP_FILE"
              class="ch.qos.logback.core.rolling.RollingFileAppender">

        <file>${LOG_DIR}/user-service.log</file>

        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>
                ${LOG_DIR}/user-service-%d{yyyy-MM-dd}.%i.log
            </fileNamePattern>
            <maxFileSize>10MB</maxFileSize>
        </rollingPolicy>

        <encoder>
            <pattern>
                %d{yyyy-MM-dd HH:mm:ss} %-5level [%thread] %logger - %msg%n
            </pattern>
        </encoder>
    </appender>

    <!-- ===== MS FLOW LOG (POSTMAN + MS CALLS) ===== -->
    <appender name="MS_FLOW_FILE"
              class="ch.qos.logback.core.rolling.RollingFileAppender">

        <file>${MS_FLOW_DIR}/ms-flow.log</file>

        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>
                ${MS_FLOW_DIR}/ms-flow-%d{yyyy-MM-dd}.%i.log
            </fileNamePattern>
            <maxFileSize>10MB</maxFileSize>
        </rollingPolicy>
        <encoder>
            <pattern>
                datetime=%d{yyyy-MM-dd HH:mm:ss.SSS}
                txId=%X{txId}
                level=%-5level
                message=%msg%n%n
            </pattern>
        </encoder>



    </appender>

    <!-- ===== LOGGERS ===== -->

    <!-- Service-to-service logs -->
    <logger name="com.company.usermicroservice.ms"
            level="INFO"
            additivity="false">
        <appender-ref ref="MS_FLOW_FILE"/>
    </logger>

    <!-- Logbook (Postman request/response) -->
    <logger name="org.zalando.logbook"
            level="TRACE"
            additivity="false">
        <appender-ref ref="MS_FLOW_FILE"/>
    </logger>

    <!-- Root = normal application logs -->
    <root level="INFO">
        <appender-ref ref="APP_FILE"/>
    </root>

</configuration>
